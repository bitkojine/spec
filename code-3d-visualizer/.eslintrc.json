{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/explicit-module-boundary-types": "error",
        "@typescript-eslint/no-unsafe-assignment": "error",
        "@typescript-eslint/no-unsafe-member-access": "error",
        "@typescript-eslint/no-unsafe-call": "error",
        "@typescript-eslint/no-unsafe-return": "error",
        "no-console": "error",
        "no-restricted-globals": [
            "error",
            {
                "name": "setTimeout",
                "message": "Use a managed scheduling service or AbortSignal-aware delay instead. See concurrency/01-async-safety.md"
            },
            {
                "name": "setInterval",
                "message": "Use a managed scheduling service instead. See concurrency/01-async-safety.md"
            }
        ],
        "max-lines": [
            "error",
            {
                "max": 300,
                "skipBlankLines": false,
                "skipComments": false
            }
        ]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}