{
  "name": "code-3d-visualizer",
  "displayName": "Code 3D Visualizer",
  "description": "Visualize your codebase in 3D",
  "version": "0.0.30",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/visualizer/code-3d-visualizer"
  },
  "publisher": "visualizer",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "code-3d-visualizer.show3DView",
        "title": "Show 3D View",
        "category": "Code 3D Visualizer"
      },
      {
        "command": "code-3d-visualizer.visualizeFullCodebase",
        "title": "Visualize Full Codebase",
        "category": "Code 3D Visualizer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run lint && npm run check-specs && tsc -p ./ && node esbuild.mts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint . --ext .ts,.js,.mts,.cts",
    "check-specs": "node scripts/verify-specs.mts",
    "test": "node ./out/test/runTest.cjs",
    "test:stress": "STRESS_TEST=true node ./out/test/runTest.cjs",
    "version:bump": "npm version patch --no-git-tag-version",
    "install:local": "npm run version:bump && rm -f *.vsix && vsce package --allow-missing-repository && code --install-extension *.vsix --force && code ."
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/three": "^0.160.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "three": "^0.160.0"
  }
}